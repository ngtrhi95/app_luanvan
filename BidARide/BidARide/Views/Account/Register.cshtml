@model BidARide.ViewModels.RegisterViewModel
<script type="text/javascript">
    function loadPage() {
        document.getElementById("headerAcc").innerHTML = "REGISTER";
        window.location = "#contact";
    }
    window.onload = loadPage;
</script>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="login">
        <div class="row">
            <table cellpadding="2" cellspacing="2" class="col-md-12">
                <tr>
                    <td style="font-size: large; color: red;">@ViewBag.Error</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.account.Username, new { Class = "labelfor" })</td>
                </tr>
                <tr>
                    <td>@Html.ValidationMessageFor(model => model.account.Username)</td>
                </tr>
                <tr>
                    <td>@Html.TextBoxFor(model => model.account.Username, new { placeholder = Html.DisplayNameFor(m => m.account.Username), Class = "textboxfor"  })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.account.Password, new { Class = "labelfor", Style = "margin-top: 15px;" })</td>
                </tr>
                <tr>
                    <td>@Html.ValidationMessageFor(model => model.account.Password)</td>
                </tr>
                <tr>
                    <td>@Html.PasswordFor(model => model.account.Password, new { placeholder = Html.DisplayNameFor(m => m.account.Password), Class = "textboxfor"  })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.account.ConfirmPassword, new { Class = "labelfor", Style = "margin-top: 15px;" })</td>
                </tr>
                <tr>
                    <td>@Html.ValidationMessageFor(model => model.account.ConfirmPassword)</td>
                </tr>
                <tr>
                    <td>@Html.PasswordFor(model => model.account.ConfirmPassword, new { placeholder = Html.DisplayNameFor(m => m.account.ConfirmPassword), Class = "textboxfor"  })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.account.Fullname, new { Class = "labelfor", Style = "margin-top: 15px;" })</td>
                </tr>
                <tr>
                    <td>@Html.ValidationMessageFor(model => model.account.Fullname)</td>
                </tr>
                <tr>
                    <td>@Html.TextBoxFor(model => model.account.Fullname, new { placeholder = Html.DisplayNameFor(m => m.account.Fullname), Class = "textboxfor" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.account.Email, new { Class = "labelfor", Style = "margin-top: 15px;" })</td>
                </tr>
                <tr>
                    <td>@Html.ValidationMessageFor(model => model.account.Email)</td>
                </tr>
                <tr>
                    <td>@Html.TextBoxFor(model => model.account.Email, new { placeholder = Html.DisplayNameFor(m => m.account.Email), Class = "textboxfor" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.account.Phone, new { Class = "labelfor", Style = "margin-top: 15px;" })</td>
                </tr>
                <tr>
                    <td>@Html.TextBoxFor(model => model.account.Phone, new { placeholder = Html.DisplayNameFor(m => m.account.Phone), Class = "textboxfor" })</td>
                </tr>
                <tr>
                    <td><button type="submit" value="Register" id="register_btn" style="width: 250px; margin-top: 5px;" class="btn btn-info">REGISTER</button></td>
                </tr>
                <tr>
                    <td><button type="button" value="Register" style="width: 250px; margin-top: 5px;" class="btn" onclick="location.href = '@Url.Action("Login", "Account")';">LOGIN</button></td>
                </tr>
            </table>
        </div>
    </div>
}

